  <body>
    <div class="container">
      <h1 class="text-center">Bashocode</h1>
      <form action="/" method="get">
        <table>
          <tr>
            <td>
              <input 
                type="text" 
                name="filter" 
                placeholder="Search..." 
                class="form-control"
                value="<%= filter ? filter : '' %>">
            </td>
            <td>
              <button class="btn btn-info" type="submit">Search</button>
            </td>
          </tr>
        </table>
      </form>
      <a href="/add" class="btn btn-primary float-right" style="margin-bottom: 10px">Add</a>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Country</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% datas.forEach((data, id) => { %>
          <tr>
            <th scope="row"> <%= ++id %> </th>
            <td> <%= data.Title %> </td>
            <td> <%= data.Country %> </td>
            <td class="float-right">
              <a href="/edit/<%= data.ID %>">
                <button 
                  type="button" 
                  class="btn btn-success" 
                  style="margin-right: 10px"
                >Edit</button>
              </a>

              <a href="/delete/<%= data.ID %>">
                <button 
                  type="button" 
                  class="btn btn-danger" 
                  style="margin-right: 10px"
                >Delete</button>
              </a>
            </td>
          </tr>
          <% }) %>
